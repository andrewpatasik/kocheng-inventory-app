              p.font-bold=type.name
          else 
            li.w-64.h-32.rounded.bg-gray-50.drop-shadow-sm.flex.flex-col.justify-center.items-center.p-2
              p.font-bold=type.name
            li.flex.flex-col.justify-center.items-center.p-2
              a.text-blue-500.flex.items-center(href="/") 
                p.pr-1='See All Animal Type'
                i.fas.fa-angle-double-right
