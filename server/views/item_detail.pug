extends layout 

block content
  #item-detail-section.flex.flex-col.w-full.min-h-full
    h1.text-blue-500.text-3xl.font-bold=title
    #item-detail-container.flex.h-full.mt-8.gap-4
      #img-container.w-60.h-auto.bg-gray-300.flex.flex-col.justify-center.items-center
        i.fas.fa-bone.text-5xl.text-gray-400
        p.font-bold.text-gray-400="Product Image"
      #detail-container
        h3.text-gray-500.text-1xl.font-bold="Product Detail"
        p #[strong Name:] #{item.name}
        p #[strong Category:] #{item.category.name}
        p #[strong Brand:]  
          if item.brand 
            a.text-blue-600.underline(href=item.brand.url) #{item.brand.name}
          else 
            span=' -'
        p #[strong For:] #{item.animal_type.name}
        p #[strong Product Description:] #{item.description}
